[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  type = cat-file -t
  dump = cat-file -p
  commit = commit --signoff

[user]
	name = Ziyi Yan
	email = ziyi.yan@foxmail.com
[core]
	autocrlf = input
	safecrlf = true
    excludesfile = ~/.gitignore
[commit]
    template = ~/.gitmessage

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
